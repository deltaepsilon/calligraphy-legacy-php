{% trans_default_domain 'FOSUserBundle' %}
<div class="column background-gray1">
    <ul class="link-list">
        <li class="link-list-item">reset password</li>
    </ul>
</div>
<div class="account-login padded-wrapper">
    <div id="login" class="column small-12">
        <br>

        <form class="qv-form full-width-form centered" name="resetForm" action="{{ path('CDEUtilityBundle_angular_reset_email') }}" method="POST">

            <input style="display: none" type="text" name="redirect" ng-model="redirect" />
            <input style="display: none" type="text" name="origin" ng-model="origin" />
            <br>

            <div class="column small-12">
                <input
                    id="username"
                    class="column small-12"
                    type="text"
                    name="username"
                    placeholder="Username or email address..."
                    ng-required="true"
                    ng-model="reset.username"
                    qv-focus
                />
            </div>

            <div class="column small-12 medium-4">
                <button
                        class="button-primary full-width"
                        type="submit"
                        ng-disabled="resetForm.$invalid"
                        >
                    reset
                </button>
            </div>
            <div class="column small-6 medium-3 text-center">
                <a class="form-link" ui-sref="login">Login</a>
            </div>
            <div class="column small-6 medium-3 text-center">
                <a class="form-link" ui-sref="register">Register</a>
            </div>

        </form>

    </div>
</div>