{% trans_default_domain 'FOSUserBundle' %}

<div class="pure-g-r account-login padded-wrapper">
    <div id="login" class="pure-u-1">

        <form class="qv-form full-width-form centered" name="resetForm" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
            <h3 class="clearfix text-green2">Reset Password</h3>

            <input style="display: none" type="text" name="redirect" ng-model="redirect" />
            <input style="display: none" type="text" name="origin" ng-model="origin" />
            <br>

            <div class="clearfix pure-g-r">
                <input
                    id="username"
                    class="pure-u-3-5 pull-left"
                    type="text"
                    name="username"
                    placeholder="Username or email address..."
                    ng-required="true"
                    ng-model="reset.username"
                    qv-focus
                />
            </div>

            <div class="clearfix pure-g-r">
                <div class="pure-u-1-5">
                    <button
                            class="button-primary full-width"
                            type="submit"
                            ng-disabled="resetForm.$invalid"
                            >
                        reset
                    </button>
                </div>
                <div class="pure-u-1-5 text-centered">
                    <a ui-sref="login">Login</a>
                </div>
                <div class="pure-u-1-5 text-centered">
                    <a ui-sref="register">Register</a>
                </div>
            </div>

        </form>

    </div>
</div>