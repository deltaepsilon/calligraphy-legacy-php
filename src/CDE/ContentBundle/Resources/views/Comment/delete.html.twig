{% extends '::admin.html.twig' %}

{% set gallery = comment.gallery %}

{% block bottomNav %}
    <a href="{{ path('CDEContentBundle_gallery_index') }}">
        <li>
            Back to Galleries
        </li>
    </a>
    <a href="{{ path('CDEContentBundle_gallery_view', { 'id': gallery.id }) }}">
        <li>
            Back to Gallery
        </li>
    </a>
{% endblock %}

{% block main %}
    <h1>Are you sure you want to delete this comment?</h1>
    {{ comment.comment | markdown | purify | raw }}
    <form action="{{ path('CDEContentBundle_comment_delete', { 'id': comment.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" value="Delete" />
    </form>
{% endblock %}
