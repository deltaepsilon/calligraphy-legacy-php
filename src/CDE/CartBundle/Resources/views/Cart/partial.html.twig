{% block cart %}
    {% if cart.products.count %}
        <span class="right cart">Cart ({{ count }})</span>
        <h2>Shopping Cart</h2>
        <div id="cart-partial">
            <table>
                <thead>
                    <tr>
                        <th class="cart-title">Title</th>
                        <th class="cart-price">Price</th>
                        <th class="cart-price">Quantity</th>
                        <th class="cart-action">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in cart.products %}
                        <tr>
                            <td class="cart-title">
                                <a href="{{ path('CDECartBundle_product_view', { 'slug': product.slug }) }}">
                                    {{ product.title }}
                                </a>
                            </td>
                            <td class="cart-price">${{ product.price }}</td>
                            <td class="cart-price">{{ product.quantity }}</td>
                            <td class="cart-action"><a href="{{ path('CDECartBundle_cart_remove', { 'id': product.id }) }}">X</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <ul class="horizontal list-hover">
                <a class="cart-button" href="{{ path('CDECartBundle_cart_index') }}">
                    <li>
                        Review Cart / Checkout
                    </li>
                </a>
                <a class="cart-button" href="{{ path('CDECartBundle_cart_empty') }}">
                    <li>
                        Empty Cart
                    </li>
                </a>
            </ul>
        </div>
    {% endif %}
{% endblock %}